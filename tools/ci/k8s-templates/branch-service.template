apiVersion: v1
kind: Service
metadata:
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/path: "/metrics"
    prometheus.io/port: "8080"
  labels:
    app: kolide-{{ .Name }}
  name: {{ .Name }}-kolide-kolide-net
  namespace: default
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8080
  selector:
    app: kolide-{{ .Name }}
  sessionAffinity: None
